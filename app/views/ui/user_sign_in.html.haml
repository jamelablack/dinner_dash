%article.register
   %header
      %h1 Sign-in
   %form.form-horizontal
      %fieldset
         .form-group
            %label.control-label.col-sm-2  Email Address:
            .col-sm-6
               %input.form-control(type="email")
         .form-group
            %label.control-label.col-sm-2  Password:
            .col-sm-6
               %input.form-control(type="password")
         .form-group
            %label.control-label.col-sm-2
            .checkbox.col-sm-2
               %input(type="checkbox") Remember me
      %fieldset.actions.form-group
         .col-sm-2.offset-3
         %button(type="submit" value="Register" class="btn btn-success") Sign in

