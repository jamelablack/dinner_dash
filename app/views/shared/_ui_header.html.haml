%navbar.navbar-fixed-top.navbar-collapse
  %div
    %h1.navbar-link.pull-left
      = link_to "Dinner Dash", home_path
    %div.navbar.pull-right
      %ul(class= "nav navbar-nav")
        %li
          %form(class="navbar-form navbar-left" role="search")
            %div.form-group
              %label.control-label Email
              %input(name="email" type="email" placeholder="email address" class="form-control")
              %label.control-label Password
              %input(name="password" type="password" placeholder="password" class="form-control")
              %button(type="submit" class="btn btn-default") Sign in
              %button(type="submit" class="btn btn-default") Register
        %li
          %a Welcome, john.doe@example.com
        %li.dropdown
          %a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
            %span(class="glyphicon glyphicon-user" aria-hidden="true")
            %span(class="caret")
          %ul(class="dropdown-menu")
            %li= link_to "Sign in", "#"
            %li= link_to "Cart", "#"
            %li= link_to "Profile", "#"
        %li
          %a(href="#")
            %span(class="glyphicon glyphicon-cutlery" aria-hidden="true")
        %li
          %a(href="#")
            %span(class="glyphicon glyphicon-shopping-cart" aria-hidden="true")

